<div class="container">
  <p class= "link" id="create"><%= link_to "+ Create New Article", new_article_path %></p>
<div class="content">
<h1>Articles</h1>
<ul>
  <% @articles.each do |article| %>
    <li>
      <p class="link"><%= link_to article.title.capitalize, article_path(article)%></p>
      <%= article.content %>
       <p class="link"><%= link_to "Delete article", article_path(article), method: :delete, data: { confirm: "Are you sure you wish to delete the article #{article.title}?" } %></p>
      </li>
  <% end %>
</ul>
</div>
</div>


